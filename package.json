{
    "name": "@danielbannert/resume",
    "version": "0.0.0",
    "private": true,
    "description": "My personal resume",
    "author": {
        "name": "Daniel Bannert",
        "email": "d.bannert@anolilab.de",
        "url": "https://www.danielbannert.com"
    },
    "type": "module",
    "scripts": {
        "build": "tsc && cross-env NODE_ENV='production' vite build",
        "build:pdf": "esno ./bin/build-pdf.ts",
        "clean": "rm -rf node_modules && rm -rf dist",
        "commit": "cz",
        "dev": "vite",
        "download:resume": "esno ./bin/download-resume-gist.ts",
        "lint": "pnpm run lint:text && pnpm run lint:prettier && pnpm run lint:eslint",
        "lint:eslint": "cross-env NO_LOGS=true eslint . --ext js,cjs,mjs,ts,tsx,json,yaml,yml,md,mdx --max-warnings=0 --config .eslintrc.cjs --cache --cache-strategy content .",
        "lint:eslint:fix": "pnpm run lint:eslint --fix",
        "lint:fix": "pnpm run lint:text:fix && pnpm run lint:prettier:fix && pnpm run lint:eslint:fix",
        "lint:prettier": "prettier --config=.prettierrc.cjs '**/*.{js,jsx,tsx,ts,less,md,json,html}'",
        "lint:prettier:fix": "prettier --config=.prettierrc.cjs --write '**/*.{js,jsx,tsx,ts,less,md,json}'",
        "lint:text": "textlint ./.github/ISSUE_TEMPLATE/** ./README.md ./UPGRADE.md --experimental --dry-run",
        "lint:text:fix": "textlint ./.github/ISSUE_TEMPLATE/** ./README.md ./UPGRADE.md --experimental --fix",
        "prepare": "is-ci || (node verify-node-version.cjs && pnpx only-allow pnpm && husky)",
        "serve": "vite preview",
        "sort-package-json": "sort-package-json",
        "test": "vitest",
        "test:coverage": "vitest run --coverage"
    },
    "dependencies": {
        "@anolilab/resume-schema": "2.0.3",
        "@fontsource/noto-sans-sc": "^5.2.5",
        "@fontsource/nunito": "^5.2.5",
        "@octokit/rest": "^21.1.1",
        "ajv": "^8.17.1",
        "ajv-formats": "^3.0.1",
        "date-fns": "^4.1.0",
        "deepmerge": "^4.3.1",
        "esno": "^4.8.0",
        "gravatar": "^1.8.2",
        "lodash.capitalize": "^4.2.1",
        "puppeteer": "^24.4.0"
    },
    "devDependencies": {
        "@anolilab/eslint-config": "^15.0.3",
        "@anolilab/prettier-config": "^5.0.14",
        "@anolilab/semantic-release-preset": "^10.0.3",
        "@anolilab/textlint-config": "^8.0.16",
        "@commitlint/cli": "^19.8.0",
        "@commitlint/config-conventional": "^19.8.0",
        "@types/gravatar": "^1.8.6",
        "@types/lodash.capitalize": "^4.2.9",
        "autoprefixer": "^10.4.21",
        "c8": "^10.1.3",
        "commitizen": "^4.3.1",
        "cross-env": "^7.0.3",
        "cssnano": "^7.0.6",
        "eslint": "8.57.0",
        "eslint-plugin-editorconfig": "^4.0.3",
        "eslint-plugin-import": "npm:eslint-plugin-i@2.29.1",
        "eslint-plugin-mdx": "^3.2.0",
        "eslint-plugin-tailwindcss": "^3.18.0",
        "handlebars": "^4.7.8",
        "husky": "^9.1.7",
        "is-ci": "^4.1.0",
        "lint-staged": "^15.5.0",
        "postcss": "^8.5.3",
        "postcss-import": "^16.1.0",
        "prettier": "^3.5.3",
        "puppeteer": "^24.4.0",
        "semantic-release": "^24.2.3",
        "sort-package-json": "^3.0.0",
        "tailwindcss": "^3.4.17",
        "textlint": "^14.5.0",
        "typescript": "^5.8.2",
        "underscore.string": "^3.3.6",
        "vite": "^6.2.2",
        "vite-plugin-favicon2": "^1.1.5",
        "vite-plugin-handlebars": "^2.0.0",
        "vite-plugin-static-copy": "^2.3.0",
        "vitest": "^3.0.9"
    },
    "packageManager": "pnpm@10.8.1",
    "pnpm": {
        "onlyBuiltDependencies": [
            "esbuild",
            "puppeteer",
            "sharp"
        ],
        "ignoredBuiltDependencies": [
            "@anolilab/eslint-config",
            "@anolilab/prettier-config",
            "@anolilab/textlint-config"
        ]
    }
}
